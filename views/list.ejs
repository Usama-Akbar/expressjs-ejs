<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Activities</title>
    <style>
      table {
        width: 100%;
        border-collapse: collapse;
      }
      th,
      td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
      }
      th {
        background-color: #f2f2f2;
      }
    </style>
  </head>
  <body>
    <h2>User Activities</h2>
    <% if (result && users.length > 0) { %>
    <table>
      <thead>
        <tr>
          <th>Activity ID</th>
          <th>User ID</th>
          <th>Login Timestamp</th>
          <th>IP Address</th>
          <th>Login Success</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(user => { %>
        <tr>
          <td><%= user.activityID %></td>
          <td><%= user.userID %></td>
          <td><%= user.loginTimestamp %></td>
          <td><%= user.ipAddress %></td>
          <td><%= user.loginSuccess === 1 ? 'true' : 'false' %></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
    <% } else { %>
    <p>No user activities found.</p>
    <% } %>
  </body>
</html>
